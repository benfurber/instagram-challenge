<h3>Comments</h3>
<% @comments.each do |comment| %>
  <div>
    <strong>@<%= comment.user.username %></strong>
    <br>
    <p><%= comment.body %></p>
    <p><%= link_to 'Delete', comment_path(comment), method: :delete, data: { confirm: 'Are you sure?' } %></p>
  </div>
<% end %>


<h3>Add your comment</h3>
<%= render 'comments/form', comment: @comment %>
