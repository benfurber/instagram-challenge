<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<% @posts.each do |post| %>
  <div>
    <p><%= image_tag post.image %></p>
    <p>@<%= post.user.username %></p>
    <p><%= post.description %></p>
    <p><%= link_to 'Show', post %></p>
  </div>
<% end %>

<br>

<%= link_to 'New Post', new_post_path %>
